{
  "identifier": "kibosy-notepad-main",
  "description": "Permissions for Kibosy Notepad to access filesystem and dialogs",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DESKTOP/**"
        }
      ]
    }
  ]
}
